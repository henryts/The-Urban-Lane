   <script>
    function moveCursor(currentInput, nextInputName) {
      if (currentInput.value.length >= 1) {
        document.getElementsByName(nextInputName)[0].focus();
      }
    }
   
 $(document).ready(function() {
$('form').on('submit', function(event) {
event.preventDefault();  
var formId = $(this).attr('id');               // number verification
$.ajax({
url: $(this).attr('action'),
type: $(this).attr('method'),
data: $(this).serialize(),

success: function(response) {
if (response.success) {
//  form selection based on formId
//$('#'+formId+'.otp-form').show();
   $('#'+formId).show();
$('#otp-send-msg').text(response.message).show();
 if(formId=='otpVerifyForm')
 {
  window.location.href = response.redirectUrl;
 }

} else {
// otp incorrect, display the error message
$('#error-message1').text(response.message).show();
}
},
error: function() {
// Error occurred while processing the request
$('#error-message').text('An error occurred while processing your request. Please try again later.').show();
}
});
});
});


