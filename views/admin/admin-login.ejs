</body>
<script>       
    $('#login-form').submit(function(e) {
    e.preventDefault(); // prevent the form from submitting normally
    $.ajax({
      url: '/admin/adminlogin',
      type: 'POST',
      data: $('#login-form').serialize(), // serialize the form data
      success: function(data) {
        // handle successful login
        window.location.replace('/admin/dashboard'); // redirect to home page
      },
      error: function(xhr, status, error) {
        // handle error
        if (xhr.status === 400) {
          $('#error-message').text(xhr.responseText);
        } else {
          $('#error-message').text("An error occurred. Please try again later.");
        }
      }
    });
  });   
  </script>

